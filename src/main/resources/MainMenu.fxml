<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<StackPane fx:controller="com.comp2042.controller.MainMenuController"
           xmlns:fx="http://javafx.com/fxml"
           prefWidth="300" prefHeight="510"
           style="-fx-background-image: url('background_image.png'); -fx-background-size: cover;">

    <VBox alignment="CENTER" spacing="20" styleClass="vbox">
        <Label text="TETRIS" styleClass="gameOverStyle" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
        
        <Label text="Enter Your Name:" styleClass="nextBrickLabel" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-padding: 10 0 0 0;"/>
        <TextField fx:id="nameInput" promptText="Player Name" maxWidth="220" 
                   style="-fx-font-size: 16px; -fx-padding: 8; -fx-background-radius: 5; -fx-border-color: #61a2b1; -fx-border-width: 2; -fx-border-radius: 5;"/>
        
        <Button text="Start Game" onAction="#startGame" styleClass="ipad-dark-grey" minWidth="150"/>
        <Button text="How to Play" onAction="#showHowToPlay" styleClass="ipad-dark-grey" minWidth="150"/>
        <Button text="Levels" onAction="#showLevels" styleClass="ipad-dark-grey" minWidth="150"/>
        <Button text="Leaderboard" onAction="#showLeaderboard" styleClass="ipad-dark-grey" minWidth="150"/>
        <Button text="Exit" onAction="#exitGame" styleClass="ipad-dark-grey" minWidth="150"/>
    </VBox>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

</StackPane>

