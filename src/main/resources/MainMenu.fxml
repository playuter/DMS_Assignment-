<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<StackPane fx:controller="com.comp2042.controller.MainMenuController"
           xmlns:fx="http://javafx.com/fxml"
           prefWidth="300" prefHeight="510"
           style="-fx-background-image: url('background_image.png'); -fx-background-size: cover;">

    <VBox alignment="CENTER" spacing="20" styleClass="vbox">
        <Label text="TETRIS" styleClass="gameOverStyle" style="-fx-text-fill: white; -fx-background-color: transparent;"/>
        
        <TextField fx:id="nameInput" promptText="Enter Name" maxWidth="200" style="-fx-font-size: 14px;"/>
        
        <Button text="Start Game" onAction="#startGame" styleClass="ipad-dark-grey" minWidth="150"/>
        <Button text="Levels" onAction="#showLevels" styleClass="ipad-dark-grey" minWidth="150"/>
        <Button text="Leaderboard" onAction="#showLeaderboard" styleClass="ipad-dark-grey" minWidth="150"/>
        <Button text="Exit" onAction="#exitGame" styleClass="ipad-dark-grey" minWidth="150"/>
    </VBox>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

</StackPane>

